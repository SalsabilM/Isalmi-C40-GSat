<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_frist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".17"
        />
    <ImageView
        android:id="@+id/iv_head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_sebha_logo"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_frist"
        app:layout_constraintBottom_toTopOf="@id/iv_body_sebha"
        />

    <ImageView
        android:id="@+id/iv_body_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-32dp"
        android:adjustViewBounds="true"
        android:src="@drawable/body_sebha_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_head_sebha" />

    <TextView
        android:id="@+id/tv_num_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        style="@style/sebhaTextStyle"
        android:layout_marginVertical="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_body_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_sebha_counter"
        android:layout_width="69dp"
        android:layout_height="81dp"
        app:cardCornerRadius="24dp"
        android:text="0"
        style="@style/sebhaTextStyle"
        android:gravity="center"
        android:background="@drawable/rodation_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_num_tasbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btn_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سبحان الله"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/rodation_shape"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sebha_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>