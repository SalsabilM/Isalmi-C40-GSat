<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_frist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".2"
        android:orientation="horizontal"
        />
    <ImageView
        android:id="@+id/iv_radio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/image_radio"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/gl_frist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_esa3a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اذاعه القران الكريم"
        style="@style/sebhaTextStyle"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_radio"
        />

    <ImageView
        android:id="@+id/ic_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_metro_next"
        android:adjustViewBounds="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_esa3a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_play"
        />
    <ImageView
        android:id="@+id/ic_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_awesome_play"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/ic_next"
        app:layout_constraintStart_toEndOf="@id/ic_next"
        app:layout_constraintEnd_toStartOf="@id/ic_before"
        />
    <ImageView
        android:id="@+id/ic_before"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_metro_before"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/ic_play"
        app:layout_constraintStart_toEndOf="@id/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>